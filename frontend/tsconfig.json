{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react",
    "target": "es5",
    "removeComments": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "baseUrl": "./",
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true
  },
  "include": [
    "typings/index.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "rules": {
    "no-require-imports": true
  }
}
